{
  "manifest_version": 3,
  "name": "Flutter Widget Catcher",
  "version": "1.0.0",
  "description": "Easily copy Flutter widgets with proper bracket matching. Right-click on any Flutter widget to copy it with all nested brackets intact.",
  "author": "Flutter Widget Catcher Team",
  "homepage_url": "https://github.com/your-username/flutter-widget-catcher",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Flutter Widget Catcher - Click for help",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus", 
    "tabs",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"],
      "css": ["snackbar.css"]
    }
  ],
  "commands": {
    "catch-widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Catch Flutter widget from selection"
    }
  },
  "minimum_chrome_version": "88"
}
